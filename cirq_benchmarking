import cirq
import time

# pick a qubit
qubit = cirq.GridQubit(0, 0)

# make the circuit
circuit = cirq.Circuit(
    cirq.X(qubit)**0.5,   # square root of NOT
    cirq.measure(qubit, key='m')  # measurement
)

print("Circuit:")
print(circuit)

# run the simulator with timing (benchmarking)
sim = cirq.Simulator()

start = time.time()
result = sim.run(circuit, repetitions=20)
end = time.time()

print("Results:")
print(result)

# get one binary string and turn it into decimal
bits = ''.join(str(bit) for bit in result.measurements['m'][0])
decimal_value = int(bits, 2)
print("Decimal result:", decimal_value)

# show how long it took
print(f"Elapsed time: {end - start:.4f} seconds")
